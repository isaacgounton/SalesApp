<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= product.title %></div>
    <form class="ui form" action="/products/<%= product._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="product[title]" value="<%= product.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="product[image]" value="<%= product.image %>">
        </div>
        <div class="field">
            <label>product Content</label>
            <textarea name="product[body]"><%= product.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ../partials/footer %>
