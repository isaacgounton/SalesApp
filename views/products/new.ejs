<% include ../partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Product</div>
    <form class="ui form" action="/products" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="product[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="product[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="product[body]"></textarea>
        </div>
        <div class="field">
            <label>Price</label>
            <input type="text" name="product[price]" placeholder="price">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ../partials/footer %>

